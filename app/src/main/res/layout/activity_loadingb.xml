<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingB_Activity"

    android:id="@+id/cl00_sTesteB">

    <LinearLayout
        android:id="@+id/ll00_sTesteB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="@+id/cl00_sTesteB"
        app:layout_constraintBottom_toBottomOf="@+id/cl00_sTesteB"
        app:layout_constraintLeft_toLeftOf="@+id/cl00_sTesteB"
        app:layout_constraintRight_toRightOf="@+id/cl00_sTesteB" >

    <ProgressBar
        android:id="@+id/progressBarAnim"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:progressTint="#d1d1d1"
        android:secondaryProgressTint="#000000"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="match_parent"
            android:indeterminate="true"
            android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt00_sTesteB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Carregar"
        android:layout_marginTop="50dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>