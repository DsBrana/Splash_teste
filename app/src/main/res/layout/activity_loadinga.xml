<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingA_Activity"

    android:id="@+id/cl00_sTeste">

   <LinearLayout
       android:id="@+id/ll00_sTeste"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"

       app:layout_constraintTop_toTopOf="@+id/cl00_sTeste"
       app:layout_constraintBottom_toBottomOf="@+id/cl00_sTeste"
       app:layout_constraintLeft_toLeftOf="@+id/cl00_sTeste"
       app:layout_constraintRight_toRightOf="@+id/cl00_sTeste">

       <ProgressBar
           android:id="@+id/pb00_sTeste"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="@style/Widget.AppCompat.ProgressBar.Horizontal"
           android:layout_marginTop="100dp"

           android:max="10"
           android:progress="0"/>

       <ProgressBar
           android:id="@+id/pb01_sTeste"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="50dp" />

       <Button
           android:id="@+id/bt00_sTeste"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="Carregar"
           android:layout_marginTop="50dp" />

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>